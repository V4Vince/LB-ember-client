{{#md-card title="Create Account" id="sign-up-card" class="col s12 m6 offset-m3"}}
    {{#md-card-content }}
      {{email-input email=credentials.email}}
      {{password-input password=credentials.password}}
      {{password-confirmation-input password=credentials.passwordConfirmation}}
      <div class="row">
      {{md-btn
        text='Sign Up'
        action='submit'
        class="col s12 m10 offset-m1
              center-align
              submit-button"}}
      </div>
      <div class="row">
      {{md-btn icon='mdi-content-send'
        iconPosition='right'
        text='Cancel'
        action='reset'
        class="col s12 m10 offset-m1
              center-align
              cancel-button"}}
      </div>
    {{/md-card-content}}

    {{#md-card-action}}
      {{#link-to 'sign-in' id="sign-in-link"}}
        {{link-to 'Sign In' 'sign-in'}}
      {{/link-to}}
    {{/md-card-action}}

{{/md-card}}
