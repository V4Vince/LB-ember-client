{{#if showConfirmation}}
    {{#md-modal close='closeModal' class="confirm-delete-dialogue"}}
        <div class="modal-content">
          <div class="container">
            <div class="row">
              <h4>Delete {{modelToBeDeleted}}</h4>
              <p class="card-title flow-text">Are you sure you want to delete this {{modelToBeDeleted}}?</p>
            </div>
            <div class="row">
              <button class="btn col s6" type="button" name="cancel delete" {{action "cancelDelete"}}>
                Cancel
              </button>
              <button class="btn col s6" type="button" name="confirm delete" {{action "confirmDelete" object}}>
                <i class="material-icons">delete_forever</i>
              </button>
            </div>
          </div>
        </div>
    {{/md-modal}}
{{/if}}
