<!-- Add the cards for what the admin sees when shes logged in and viewing /profile -->

<!--div row-->

{{#each profile as |profile|}}
<div class="col m6 hide-on-small-only">
  <div class="row">
    {{md-btn text="Edit"
      class="col s6 offset-s3"}}
  </div>
  <div class="row">
    {{#md-card-panel
        class="white flow-text
               col s12"
        bodyClass="black-text"
        id="profilePic"}}
      <h2>Picture</h2>
    {{/md-card-panel}}
  </div>
</div>

<div class="col s12 m6">
  <div class="row">
    {{md-btn text="Edit"
      class="col s12 m6 offset-m3"
      action='editAboutModal'}}
  </div>
  <div class="row">
    <div class="col s12">
      {{profile.aboutMe}}
    </div>
  </div>
</div>

{{#if aboutModalIsOpen}}
  {{modal-display
    profile=profile
    aboutModalIsOpen=aboutModalIsOpen }}
{{/if}}

{{/each}}



