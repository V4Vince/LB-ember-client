<!-- Add the cards for what the admin sees when shes logged in and viewing /profile -->

<!--div row-->

{{#each profile as |profile|}}
<!-- Picture section -->
<div class="col m6 hide-on-small-only">
  <!-- Edit Button -->
  <div class="row">
  {{md-btn text="Edit"
       class="col s6 offset-s3" }}
  </div>
  <!-- Picture -->
  <div class="row">
  {{#md-card-panel
        class="white flow-text col s12"
        bodyClass="black-text"
        id="profilePic" }}
      <span>Picture</span>
  {{/md-card-panel}}
  </div>
</div> <!-- /picture section-->

<!-- About me info -->
<div class="col s12 m6">

  <!-- Edit button-->
  <div class="row">
    {{md-btn text="Edit"
      class="col s12 m6 offset-m3"
      action='editAboutModal'}}
  </div>
  <!-- Displays about me text-->
  <div class="row">
    <div class="col s12">
      {{profile.aboutMe}}
    </div>
  </div>

</div><!-- /about me info-->

<!-- Modal with input text box-->
{{#if aboutModalIsOpen}}
  {{modal-display
    profile=profile
    aboutModalIsOpen=aboutModalIsOpen }}
{{/if}}

{{/each}}



