
{{#md-modal close='closeModal' isFooterFixed=true class="edit-blog-modal"}}
    <div class="modal-content">
      <h4 class="card-title center-align">Edit {{blog.title}}</h4>
      <div class="row">
      {{md-input value=blog.title label='Title' class="col s12 form-group" errors=errors.title}}
      </div>
      <div class="row">
        {{md-textarea label='Blog post'
          value=blog.content
          class="col s12"}}
      </div>
    </div>
    <div class="row">
      <div class="modal-footer">
        <!--Wire up update/edit function here-->
          <a class="edit-modal-button btn-flat col s12 center-align" {{action 'edit' blog}}>
              <i class="submit-icon material-icons">done</i>
          </a>
      </div>
    </div>

{{/md-modal}}
