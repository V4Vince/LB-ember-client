{{#each sortedBlog as |blog|}}

{{moment-format blog.createdAt 'MM/DD/YYYY'}}
{{#md-card title=blog.title class="blog-card"}}
    {{#md-card-content}}
        {{blog.content}}
    {{/md-card-content}}

    {{#md-card-action class="blog-card-action"}}
      {{blog-actions/admin-tools
        editBlog="editBlog"
        deleteBlog="deleteBlog"
        blog=blog}}
        {{!-- {{#link-to "cards"}}Link 1{{/link-to}}
        {{#link-to "cards"}}Link 2{{/link-to}} --}}
    {{/md-card-action}}
{{/md-card}}
{{/each}}
